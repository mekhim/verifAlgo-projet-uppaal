	<declaration>clock globalTimer;
const int NB_ETAT = 3;
const int NB_LIVREUR_MAX = 1;


typedef int[0, NB_LIVREUR_MAX-1] livreur_t;
typedef int[0, NB_ETAT-1] nb_etat_t;
bool lettres[nb_etat_t];
int nb_livreur = NB_LIVREUR_MAX;

//CHANNEL
chan livreur_se_deplace,commence,livraison[livreur_t];

//lettres_t lettres;
int transitions[nb_etat_t][nb_etat_t];

void init_transitions(int&amp; transitions[nb_etat_t][nb_etat_t]){
    //transition dépot -&gt; maison1
    transitions[0][1] = 3;
    //transition maison1
    transitions[1][0] = 3;
    transitions[1][2] = 2;
    //transition maison2
    transitions[2][0] = 1;
}


void init_lettres(bool&amp; lettres[nb_etat_t]){
    lettres[1] = true;
    lettres[2] = true;
}
void init_(){
    init_transitions(transitions);
    init_lettres(lettres);
}


